<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Data Mahasiswa</title>
    <!-- Tambahkan Font dari Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Gunakan Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Roboto', sans-serif; /* Gunakan Font Roboto */
            padding-top: 20px;
        }
        .table-bordered {
            border: 2px solid #dee2e6;
            padding-left: 50px;
            padding-right: 50px;
        }
        .col{
            padding-left: 50px;
            padding-right: 50px;
        }
        .btn-create {
            background-color: #282188;
            border-color: #282188;
        }
        .btn-create:hover {
            background-color: #286ea7;
            border-color: #286ea7;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="text-center">DATA MAHASISWA</h1>
        <% if (messages.success) { %>
            <div class="alert alert-info mb-3" role="alert">
        <%- messages.success %>
        </div>
        <% } %>
        <div class="row">
            <div class="col">
                <a href="/mahasiswa/create" class="btn btn-success btn-create mb-3">Tambah</a>
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th scope="col">NRP</th>
                            <th scope="col">Nama mahasiswa</th>
                            <th scope="col">Jenis Kelamin</th>
                            <th scope="col">Agama</th>
                            <th scope="col">Umur</th>
                            <th scope="col">Tinggi Badan</th>
                            <th scope="col">Gol. Darah</th>
                            <th scope="col">Alamat</th>
                            <th scope="col">Hobi</th>
                            <th scope="col">Email</th>
                            <th scope="col">No. Telepon</th>
                            <th colspan="2" scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row"><%= data[i].nrp %></th>
                            <td><%= data[i].nama_depan %> <%= data[i].nama_belakang %></td>
                            <td><%= data[i].jenis_kelamin %></td>
                            <td><%= data[i].agama %></td>
                            <td><%= data[i].umur %></td>
                            <td><%= data[i].tinggi_badan %></td>
                            <td><%= data[i].gol_darah %></td>
                            <td><%= data[i].alamat %></td>
                            <td><%= data[i].hobi %></td>
                            <td><%= data[i].email %></td>
                            <td><%= data[i].no_telpon %></td>
                            <td>
                                <a href="/mahasiswa/edit/<%= data[i].id_mahasiswa %>" class="btn btn-warning btn-action">Edit</a>
                                <a href="/mahasiswa/delete/<%= data[i].id_mahasiswa %>" class="btn btn-danger btn-action">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Tambahkan Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
