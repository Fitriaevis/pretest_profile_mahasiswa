<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Data Pendidikan</title>
    <!-- Tambahkan Font dari Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Gunakan Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Roboto', sans-serif; /* Gunakan Font Roboto */
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%- messages.success %>
        </div>
        <% } %>
        <div class="row">
            <div class="col">
                <a href="/pendidikan/create" class="btn btn-success mb-3">Tambah</a>
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nama Instansi</th>
                            <th scope="col">Jurusan</th>
                            <th scope="col">Tahun Masuk</th>
                            <th scope="col">Tahun Lulus</th>
                            <th scope="col">Nomor Ijazah</th>
                            <th scope="col">ID Mahasiswa</th>
                            <th colspan="2" scope="col">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row"><%= data[i].id_pendidikan %></th>
                            <td><%= data[i].nama_instansi %></td>
                            <td><%= data[i].jurusan %></td>
                            <td><%= data[i].tahun_masuk %></td>
                            <td><%= data[i].tahun_lulus %></td>
                            <td><%= data[i].nomor_ijazah %></td>
                            <td><%= data[i].id_mahasiswa %></td>
                            <td>
                                <a href="/pendidikan/edit/<%= data[i].id_pendidikan %>" class="btn btn-warning btn-action">Edit</a>
                                <a href="/pendidikan/delete/<%= data[i].id_pendidikan %>" class="btn btn-danger btn-action">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Tambahkan Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
